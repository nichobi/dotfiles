# Maintainer: Nicholas Boyd Isacsson

pkgname=nichobi-devel
pkgver=4
pkgrel=1
pkgdesc="nichobi development packages"
arch=('any')
depends=(
  'nichobi-base'

  'neovim'                  # Editor
  'npm'                     # Backend for coc.nvim

  # Scala
  'scala'                   # Scala compiler
  'scala-docs'              # Documentation
  'scala-sources'           # Scala standard library source code
  'scala3'                  # Scala 3
  'ammonite'                # Script-focused Scala REPL
  'jdk11-openjdk'           # Requirement for metals
  'coursier-native'         # Coursier, required by nvim-metals

  # Haskell
  'ghcup'                   # Installer for GHC & haskell-language-server

  # Shell
  'bash-language-server'    # Bash language server
  'shellcheck'              # Static analysis
)

