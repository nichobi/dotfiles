### Input configuration
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.
input type:touchpad {
  accel_profile flat
  drag enabled
  dwt disabled
  middle_emulation enabled
  natural_scroll enabled
  pointer_accel 1
  scroll_method two_finger
  tap enabled
}

input type:keyboard {
    # us_se is my custom keyboard layout, located in dotfiles/xkb/symbols/us_se
    xkb_layout us_se,se
    xkb_options ctrl:nocaps,grp:lctrl_lwin_toggle,shift:both_capslock,compose:lctrl
    repeat_delay 500
    repeat_rate 15
}

input 19780:21060:Falbatech_The_Redox_Keyboard {
    # Don't rebind a bunch of stuff for the Redox, can just reprogram it instead
    xkb_options grp:lctrl_lwin_toggle
}

