# Maintainer: Nicholas Boyd Isacsson

pkgname=nichobi-sway
pkgver=7
pkgrel=1
pkgdesc="Sway setup"
arch=('any')
depends=(
  'nichobi-base'

  # Base setup
  'alacritty'             # Terminal
  'sway'                  # Window manager
  'swayidle'              # Idle managment daemon
  'swaylock-effects-git'  # Lock screen
  'waybar'                # Bar

  # Utilities
  'brightnessctl'         # Brightness controller
  'flashfocus-git'        # Flash windows on focus
  'grimshot'              # Screenshot helper
  'pamixer'               # Pulseaudio mixer
  'pinentry-dmenu'        # Pinentry program
  'runin-git'             # Run command in terminal and pipe stdin & stdout for it
  'swaync'                # Notification demon
  'waybar-mpris-git'      # Media module for waybar
  'wl-clipboard'          # Clipboard manager
  'wob'                   # Volume/backlight overlay bar
  'ydotool'               # Input automation tool

  # Useful applications
  'imv'                   # Image viewer
  'mpv'                   # Video player
  'qutebrowser'           # Browser
  'zathura'               # Document viewer

  # Theming
  'adwaita-qt5'           # Consistent theme between QT and GTK
  'adwaita-qt6'           # Consistent theme between QT and GTK
)
optdepends=(
  'jome-git'              # Graphical emoji picker
  'wtype'                 # Type characters automatically (used for jome binding)
)

